@model Fujitsu.Models.TbMSupplierViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="TbMSuppliers" asp-action="Index" method="get">
    <p>

        <select asp-for="dataCity" asp-items="Model.Cities">
            <option value="">All</option>
        </select>

        <select asp-for="dataProvince" asp-items="Model.Provinces">
            <option value="">All</option>
        </select>

        Code: <input type="text" name="SearchString" />
        <input type="submit" value="Search" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tbMSuppliers![0].SupplierCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tbMSuppliers![0].SupplierName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tbMSuppliers![0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tbMSuppliers![0].Province)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tbMSuppliers![0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tbMSuppliers![0].Pic)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.tbMSuppliers!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Province)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pic)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SupplierCode">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SupplierCode">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SupplierCode">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
